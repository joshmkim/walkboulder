<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
  body {
    background-color: #f8f9fa;
    font-family: sans-serif;
  }

  .profile-card {
    background-color: #fff;
    max-width: 500px;
    margin: 3rem auto; /* Added top margin */
    padding: 2rem;
    border: 1px solid #ccc;
  }

    .avatar {
      width: 100px;
      height: 100px;
      object-fit: cover;
      margin: 0 auto;
      border-radius: 50%;
      display: block;
    }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .bio-text {
    font-size: 1rem;
    color: #555;
  }

  .achievements-box {
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #f1f1f1;
    padding: 1rem;
  }

  .friends-box {
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #f9f9f9;
  padding: 1rem;
}

{{!-- .friend-avatar {
  width: 32px;
  height: 32px;
  object-fit: cover;
  border-radius: 50%;
} --}}

  .custom-btn {
    display: inline-block;
    padding: 0.4rem 1rem;
    font-size: 0.95rem;
    background-color: #000;
    color: white;
    border: 1px solid #000;
    border-radius: 5px;
    text-decoration: none;
    margin-top: 0.3rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
    }

  .custom-btn:hover {
    background-color: #333;
  }

  .custom-btn.secondary {
    background-color: white;
    color: black;
  }

  .custom-btn.secondary:hover {
    background-color: #eee;
  }
</style>

</head>
<body>
  <div class="container text-center">
    <div class="profile-card">
      <!-- Avatar Image -->
        <img src="{{userData.avatar}}" alt="Profile picture" class="avatar" id="avatarPreview">

      <!-- User Name -->
      <h2>{{userData.name}}</h2>

      <!-- User Bio -->
      {{#if userData.bio}}
        <p class="bio-text">{{userData.bio}}</p>
      {{else}}
        <p class="bio-text text-muted">This user hasn‚Äôt written a bio yet.</p>
      {{/if}}

      {{!-- <!-- Friends -->
      <div class="Friend-box mt-4 text-start">
        <h5 class="mb-3">Friends</h5>
        {{#if userData.friends.length}}
          <ul class="list-unstyled">
            {{#each userData.friends}}
              <li class="mb-2">üèÜ {{this.username}}</li>
            {{/each}}
          </ul>
        {{else}}
          <p class="text-muted">No friends yet.</p>
        {{/if}}
      </div> --}}
      <!-- Friends Section -->
      <div class="friends-box mt-4 text-start">
        <h5 class="mb-3">Friends</h5>
        {{#if userData.friends.length}}
          <ul class="list-unstyled">
            {{#each userData.friends}}
              <li class="d-flex align-items-center mb-2">
                {{!-- <img src="{{this.avatar}}" alt="{{this.username}} avatar" class="friend-avatar me-2"> --}}
                <span>{{this.username}}</span>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p class="text-muted">You don't have any friends added yet.</p>
        {{/if}}
      </div>


      {{!-- <!--Achievements-->
      <div class="container">
      {{#each userData.achievements}}
        <p>{{this.username}}</p>
      {{/each}}
      </div> --}}
      <!-- Achievements -->
      <div class="achievements-box mt-4 text-start">
        <h5 class="mb-3">Achievements</h5>
        {{#if userData.achievements.length}}
          <ul class="list-unstyled">
            {{#each userData.achievements}}
              <li class="mb-2">üèÜ {{this.username}}</li>
            {{/each}}
          </ul>
        {{else}}
          <p class="text-muted">No achievements yet.</p>
        {{/if}}
      </div>

      <!-- Action Buttons -->
      <div class="mt-4">
        <a href="/settings" class="custom-btn">Edit Profile</a>
        <a href="/logout" class="custom-btn secondary">Logout</a>
      </div>
    </div>
  </div>
</body>
</html>
