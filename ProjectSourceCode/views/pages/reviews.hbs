
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reviews</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Trail Reviews</h1>
    
    <!-- Add Review Button -->
    <button class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#reviewModal">
      Write Review
    </button>

    <!-- Sort Controls -->
    <div class="d-flex justify-content-end mb-3">
      <div class="btn-group">
        <button class="btn btn-outline-secondary sort-btn active" data-sort="popular">
          Most Reviews
        </button>
        <button class="btn btn-outline-secondary sort-btn" data-sort="rating">
          Highest Rated
        </button>
      </div>
    </div>

    <!-- Trails List -->
    <div class="list-group" id="trails-list">
      {{#each trails}}
        <div class="list-group-item trail-item" data-trail-id="{{trail_id}}">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-1">{{trail_name}}</h5>
            <div>
              <span class="badge bg-primary rounded-pill">{{review_count}} reviews</span>
              <span class="badge bg-warning text-dark ms-2">
                Avg: {{avg_rating}} ★
              </span>
            </div>
          </div>
          <button class="btn btn-sm btn-link toggle-reviews" data-bs-toggle="collapse" 
                  data-bs-target="#reviews-{{trail_id}}">
            Show Reviews
          </button>
          
          <!-- Collapsible Reviews Section -->
          <div class="collapse mt-3" id="reviews-{{trail_id}}">
            {{#if reviews.length}}
              {{#each reviews}}
                <div class="card mb-2">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <h6 class="card-title">{{username}}</h6>
                      <div class="text-warning">{{rating}} ★</div>
                    </div>
                    <p class="card-text">{{written_review}}</p>
                  </div>
                </div>
              {{/each}}
            {{else}}
              <div class="alert alert-info">No reviews yet!</div>
            {{/if}}
          </div>
        </div>
      {{else}}
        <div class="alert alert-warning">No trails found!</div>
      {{/each}}
    </div>
  </div>

  <!-- Review Modal -->
  <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="reviewModalLabel">Write a Review</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/submit-review" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="trailSelect" class="form-label">Select Trail</label>
              <select class="form-select" id="trailSelect" name="trail_id" required>
                <option value="" selected disabled>Choose a trail...</option>
                {{#each allTrails}}
                  <option value="{{trail_id}}">{{trail_name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-3">
              <label for="ratingInput" class="form-label">Rating</label>
              <select class="form-select" id="ratingInput" name="rating" required>
                <option value="" selected disabled>Select rating...</option>
                <option value="1">1 ★</option>
                <option value="2">2 ★</option>
                <option value="3">3 ★</option>
                <option value="4">4 ★</option>
                <option value="5">5 ★</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="reviewText" class="form-label">Your Review</label>
              <textarea class="form-control" id="reviewText" name="written_review" rows="3" required></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit Review</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const trailsList = document.getElementById('trails-list');
    const sortButtons = document.querySelectorAll('.sort-btn');
    
    // Store original order for reset if needed
    const originalOrder = Array.from(document.querySelectorAll('.trail-item'));
    
    sortButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        // Update active button
        sortButtons.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        // Get all trail items
        const items = Array.from(document.querySelectorAll('.trail-item'));
        
        // Sort based on selected criteria
        items.sort((a, b) => {
          // Get review count (from the primary badge)
          const aReviews = parseInt(a.querySelector('.bg-primary').textContent);
          const bReviews = parseInt(b.querySelector('.bg-primary').textContent);
          
          // Get average rating (from the warning badge)
          const aRating = parseFloat(a.querySelector('.bg-warning').textContent.match(/\d+\.?\d*/)[0]);
          const bRating = parseFloat(b.querySelector('.bg-warning').textContent.match(/\d+\.?\d*/)[0]);
          
          if (this.dataset.sort === 'popular') {
            // Most Reviews first
            return bReviews - aReviews;
          } else {
            // Highest Rated first
            return bRating - aRating;
          }
        });
        
        // Clear and re-append sorted items
        trailsList.innerHTML = '';
        items.forEach(item => trailsList.appendChild(item));
      });
    });
  });
</script>
</body>
</html>